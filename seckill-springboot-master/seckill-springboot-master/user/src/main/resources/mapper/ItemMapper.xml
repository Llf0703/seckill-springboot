<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.seckill.user.mapper.ItemMapper">

    <select id="find_all" resultType="com.seckill.user.entity.Items">
        select * from item ORDER BY start_time
    </select>

    <select id="find_by_id" resultType="com.seckill.user.entity.Item">
        select * from item WHERE id = #{id,jdbcType=INTEGER}
    </select>


</mapper>